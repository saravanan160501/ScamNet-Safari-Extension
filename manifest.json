{
    "manifest_version": 3,
    "name": "ScamNet",
    "description": "Blocks scam websites and notifies if you visit a likely scam website.",
    "version": "1.0",
    
    "icons": {
        "1024": "images/toolbar-icon.png"
    },
    
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    
    "content_scripts": [{
        "js": ["content.js"],
        "matches": [ "<all_urls>" ]
    }],
    
    "permissions": ["tabs", "nativeMessaging"]
}
